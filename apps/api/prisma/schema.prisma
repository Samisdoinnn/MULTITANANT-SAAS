generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  ADMIN
  FINANCE
  CUSTOMER
}

enum PlanType {
  METERED
  TIERED
  FREEMIUM
}

enum InvoiceStatus {
  DRAFT
  PENDING
  PAID
  VOID
  FAILED
}

model Tenant {
  id              String   @id @default(uuid())
  name            String
  email           String   @unique
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  stripeCustomerId String?

  planId          String?
  plan            PricingPlan? @relation(fields: [planId], references: [id])

  users           User[]
  usageEvents     UsageEvent[]
  invoices        Invoice[]
  apiKeys         ApiKey[]
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  password  String
  name      String?
  role      Role     @default(CUSTOMER)
  
  tenantId  String
  tenant    Tenant   @relation(fields: [tenantId], references: [id])

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model PricingPlan {
  id            String   @id @default(uuid())
  name          String
  description   String?
  type          PlanType
  basePrice     Decimal  @default(0.0)
  
  // For usage-based
  includedUnits Int      @default(0)
  overageRate   Decimal  @default(0.0)

  tenants       Tenant[]
  
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}

model UsageEvent {
  id              String   @id @default(uuid())
  tenantId        String
  tenant          Tenant   @relation(fields: [tenantId], references: [id])
  
  eventType       String   // e.g., "api_call", "storage_gb"
  quantity        Int      @default(1)
  timestamp       DateTime @default(now())
  processed       Boolean  @default(false)

  idempotencyKey  String?  @unique

  createdAt       DateTime @default(now())
}

model Invoice {
  id          String        @id @default(uuid())
  tenantId    String
  tenant      Tenant        @relation(fields: [tenantId], references: [id])
  
  amount      Decimal
  status      InvoiceStatus @default(DRAFT)
  
  billingStart DateTime
  billingEnd   DateTime
  
  items       InvoiceItem[]

  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt
}

model InvoiceItem {
  id          String   @id @default(uuid())
  invoiceId   String
  invoice     Invoice  @relation(fields: [invoiceId], references: [id])
  
  description String
  quantity    Int
  unitPrice   Decimal
  total       Decimal
}

model ApiKey {
  id        String   @id @default(uuid())
  key       String   @unique
  tenantId  String
  tenant    Tenant   @relation(fields: [tenantId], references: [id])
  isActive  Boolean  @default(true)
  createdAt DateTime @default(now())
}
